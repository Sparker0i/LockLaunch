<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:key="prefCat_weather"
        android:title="@string/pref_cat_weather">

        <SwitchPreference
            android:key="pref_enable_lock"
            android:title="@string/pref_cat_enable_lock" />
        <Preference
            android:key="pref_add_face"
            android:title="Add Face"
            android:summary="Click to add your face"
            android:dependency="pref_enable_lock" />

        <Preference
            android:key="pref_load_pin"
            android:title="Add a Backup pin"
            android:summary="The pin will automatically triggered when the app fails to find users face within 3 attempts"
            android:dependency="pref_enable_lock" />


    </PreferenceCategory>
</PreferenceScreen>